@page
@model MyStore.Pages.Clients.IndexModel
@{
    ViewData["Title"] = "Contacts";
}

<br/>
<h2>List of @ViewData["Title"]</h2>
@*<h2>List of Clients</h2>*@

<table class="table">
    <thead>
        <tr>
            <th>No.</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Created At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 1;
        }
        @foreach(var item in Model.listClients)
        {
            <tr>
                <td>@(count++)</td>
                <td>@item.name</td>
                <td>@item.email</td>
                <td>@item.phone</td>
                <td>@item.address</td>
                <td>@item.created_at</td>
                <td>
                    <a class="btn btn-secondary btn-sm" href="/Clients/Edit?id=@item.id">Edit</a>
                    @*<a class="btn btn-danger btn-sm" href="/Clients/Delete?id=@item.id">Delete</a>*@
                    <button class="btn btn-danger btn-sm" onclick="dltFunction(@item.id)">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-success btn-sm" href="/Clients/Create">Add a new Contact</a>


<script>
    function dltFunction(item)
    {
        if (confirm("Are you sure to delete this contact?")) 
        {
            window.location.href = "/Clients/Delete?id=" + item;
        } 
        else 
        {
            // NULL.
        }
    }
</script>